TESSDATA_PREFIX=/usr/share/tesseract/tessdata/
UVICORN_WORKERS=2
UVICORN_RELOAD=True

# VRAM Management for GPU systems
# When enabled, uses process-based worker orchestrator for complete VRAM isolation
# Each OCR/conversion task runs in a separate Python process that terminates after completion
# This eliminates CUDA context persistence and prevents VRAM accumulation
#
# VRAM Behavior:
#   - Idle state: ~50MB (main FastAPI process only, no CUDA context)
#   - Processing: ~6GB (worker process active with models loaded)
#   - After completion: Returns to ~50MB (worker process terminated, VRAM fully released)
#   - No accumulation across multiple tasks
#
# Trade-off: Slightly slower (~1-2s overhead) due to process spawn and model loading
#
# When disabled: Uses thread-based LocalOrchestrator (faster but VRAM not fully released)

# DOCLING_SERVE_FREE_VRAM_ON_IDLE=true

# Ollama configuration
# DOCLING_SERVE_UNLOAD_OLLAMA_BASE_URL=http://localhost:11434
# DOCLING_SERVE_UNLOAD_OLLAMA_MODEL=llama3.2

# llama-swap configuration
